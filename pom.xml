<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>geoxygene</artifactId>
		<groupId>fr.ign.cogit</groupId>
		<version>1.6</version>
	</parent>

	<artifactId>geoxygene-wps</artifactId>
	<packaging>jar</packaging>
	<name>GeOxygene Web Processing Services</name>
	<description></description>

	<licenses>
		<license>
			<name>CeCILL License</name>
			<url>http://www.cecill.info/</url>
		</license>
	</licenses>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<geoserver.extension.version>2.4.0</geoserver.extension.version>
		<path.geoserver>D:\MesProgrammes\GeoServer\GeoServer-2.4.1\webapps\geoserver\WEB-INF\lib</path.geoserver>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.geoserver.extension</groupId>
			<artifactId>wps-core</artifactId>
			<version>${geoserver.extension.version}</version>
		</dependency>
		<dependency>
			<groupId>org.geoserver.extension</groupId>
			<artifactId>web-wps</artifactId>
			<version>${geoserver.extension.version}</version>
		</dependency>
		<dependency>
			<groupId>org.geoserver.web</groupId>
			<artifactId>web-core</artifactId>
			<version>2.3.5</version>
		</dependency>

		<dependency>
			<groupId>com.vividsolutions</groupId>
			<artifactId>jts</artifactId>
		</dependency>

		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>geoxygene-io</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>geoxygene-util</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>geoxygene-contrib</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>

	<repositories>
		<repository>
			<id>opengeo</id>
			<url>http://repo.opengeo.org</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>

	<profiles>
		<profile>
			<id>geoserver</id>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<version>1.4</version>
						<executions>
							<execution>
								<phase>install</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
									
									<!-- check if property "path.geoserver" is available, if not fail -->
	                                <fail message="Property path.geoserver needs to be set to a value">
	                                    <condition>
	                                        <or>
	                                            <equals arg1="${path.geoserver}" arg2=""/>
	                                            <not>
	                                                <isset property="path.geoserver"/>
	                                            </not>
	                                       </or>
	                                   </condition>
	                                </fail>

									<echo>Delete GeOxygene libraries</echo>
										<delete
											file="${path.geoserver}geoxygene-wps-${project.version}.jar" />
										<delete
											file="${path.geoserver}geoxygene-api-${project.version}.jar" />
										<delete
											file="${path.geoserver}geoxygene-feature-${project.version}.jar" />
										<delete
											file="${path.geoserver}geoxygene-contrib-${project.version}.jar" />
										<delete file="${path.geoserver}geoxygene-io-${project.version}.jar" />
										<delete file="${path.geoserver}geoxygene-util-${project.version}.jar" />
										<delete
											file="${path.geoserver}geoxygene-spatial-${project.version}.jar" />

									<echo>Copy GeOxygene libraries into GeoServer WEB-INF\lib</echo>
										<copy file="${basedir}/target/geoxygene-wps-${project.version}.jar"
											todir="${path.geoserver}" />
										<copy
											file="${basedir}/../geoxygene-api\target\geoxygene-api-${project.version}.jar"
											todir="${path.geoserver}" />
										<copy
											file="${basedir}/../geoxygene-feature\target\geoxygene-feature-${project.version}.jar"
											todir="${path.geoserver}" />
										<copy
											file="${basedir}/../geoxygene-contrib\target\geoxygene-contrib-${project.version}.jar"
											todir="${path.geoserver}" />
										<copy
											file="${basedir}/../geoxygene-io\target\geoxygene-io-${project.version}.jar"
											todir="${path.geoserver}" />
										<copy
											file="${basedir}/../geoxygene-util\target\geoxygene-util-${project.version}.jar"
											todir="${path.geoserver}" />
										<copy
											file="${basedir}/../geoxygene-spatial\target\geoxygene-spatial-${project.version}.jar"
											todir="${path.geoserver}" />

									</tasks>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>